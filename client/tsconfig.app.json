{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue"
  ],
  "exclude": [
    "src/**/__tests__/*"
  ],
  "compilerOptions": {
    "composite": true,
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "allowJs": true,
    "lib": [
      "ES2021"
    ],
    "module": "commonjs",
    "target": "ES2021",
    "types": [
      "node",
      "jsdom"
    ]
  }
}