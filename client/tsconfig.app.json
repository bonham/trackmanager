{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": [
    // exclude tests here if needed. ( don't know why )
    "dist"
  ],
  "compilerOptions": {
    "outDir": "dist_random", // satisfy vs code syntax check
    "composite": true,
    "module": "ESNext",
    "target": "es2022",
    "lib": ["ES2022", "DOM"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "allowJs": true // do we need it?
  }
}
