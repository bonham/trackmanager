{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "src/**/*"
  ],
  "exclude": [
    // exclude tests here if needed. ( don't know why )
    "dist"
  ],
  "compilerOptions": {
