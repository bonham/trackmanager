{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "command": "npm",
      "args": ["run", "start"],
      "problemMatcher": [],
      "label": "backend server",
      "runOptions": {
        "runOn": "folderOpen"
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "new",
        "showReuseMessage": true,
        "clear": true,
        "close": false
      }
    },
    {
      "type": "shell",
      "command": "npm",
      "args": ["run", "lint"],
      "problemMatcher": ["$eslint-stylish"],
      "label": "lint folder",
      "runOptions": {
        "runOn": "default"
      },
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "revealProblems": "never",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false,
        "close": false
      }
    },
    {
      "type": "shell",
      "command": "npm",
      "args": ["run", "test:watch"],
      "problemMatcher": [],
      "label": "vitest watch",
      "runOptions": {
        "runOn": "folderOpen"
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false,
        "close": false
      }
    }
  ]
}
