{
  "extends": "@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
    "module": "Node16",
    "outDir": "dist",
    "strict": true,
    "sourceMap": true,
    "allowJs": true,
    "checkJs": false, // todo: set to true
    "verbatimModuleSyntax": true,
    "target": "ES2022"
  },
  "ts-node": {
    "esm": true,
    "files": true
  },
  "include": [
    "src/**/*",
    "tests/**/*",
    "types/**/*"
  ],
  "exclude": [
    "dist"
  ]
  
}